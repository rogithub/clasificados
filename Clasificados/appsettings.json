{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.RollingFile"
        ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "logs/clasificados-{Date}.txt"
                }
            }
        ],
        "Properties": {
            "Application": "clasificados"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Default": "Host=postgres_clasificados;Username=postgres;Password=tupinchekola;Database=clasificados"
    }
}